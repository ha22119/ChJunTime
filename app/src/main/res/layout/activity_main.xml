<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/backgroundDark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/record_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/side_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#00ff0000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/border_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="2020.00.00"
            android:gravity="center"
            android:textColor="@color/fontColor"
            android:textSize="24sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/study_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/time_record_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="50dp"
            android:text="00h 00m"
            android:gravity="center"
            android:textColor="@color/fontColor"
            android:textSize="48sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/time_table_list"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/study_timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/under_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/time_table_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/study_timer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/under_bar"
                >
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="7"
                    android:rowCount="1">
                    <TextView
                        android:text="00"
                        android:textColor="@color/fontColor"
                        android:textSize="24sp"
                        android:layout_marginRight="5dp"/>
                    <View
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:background="@drawable/time_table"
                        />
                    <View
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:background="@drawable/time_table"
                        />
                    <View
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:background="@drawable/time_table"
                        />
                    <View
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:background="@drawable/time_table"
                        />
                    <View
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:background="@drawable/time_table"
                        />
                    <View
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:background="@drawable/time_table"
                        />
                </GridLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/time_table_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/study_timer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/under_bar"
                >
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="7"
                    android:rowCount="1">
                    <TextView
                        android:text="00"
                        android:textColor="@color/fontColor"
                        android:textSize="24sp"
                        android:layout_marginRight="5dp"/>
                    <View
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:background="@drawable/time_table"
                        />
                    <View
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:background="@drawable/time_table"
                        />
                    <View
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:background="@drawable/time_table"
                        />
                    <View
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:background="@drawable/time_table"
                        />
                    <View
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:background="@drawable/time_table"
                        />
                    <View
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:background="@drawable/time_table"
                        />
                </GridLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ScrollView
        android:id="@+id/today_record_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/time_table_list"
        app:layout_constraintTop_toBottomOf="@+id/study_timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/under_bar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/under_button_box"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="야호"
                    android:textSize="18sp"
                    android:textColor="@color/fontColor"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/study_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="00m"
                    android:textColor="@color/fontColor"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
            
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/under_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/border_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <Button
            android:id="@+id/todayButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/under_button_box"
            style="?android:attr/borderlessButtonStyle"
            android:text="TODAY"
            android:textColor="@color/fontColor"
            android:gravity="center"
            />

        <Button
            android:id="@+id/monthlyButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/todayButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/recordButton"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/under_button_box"
            style="?android:attr/borderlessButtonStyle"
            android:text="MONTHLY"
            android:textColor="@color/fontColor"
            android:gravity="center"

            />

        <Button
            android:id="@+id/recordButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/monthlyButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/myButton"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/under_button_box"
            style="?android:attr/borderlessButtonStyle"
            android:text="RECORD"
            android:textColor="@color/fontColor"
            android:gravity="center"

            />

        <Button
            android:id="@+id/myButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/under_button_box"
            style="?android:attr/borderlessButtonStyle"
            android:text="MY"
            android:textColor="@color/fontColor"
            android:gravity="center"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>